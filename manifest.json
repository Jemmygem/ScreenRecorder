{
  "manifest_version": 3,
  "name": "Screen Recorder",
  "version": "1.0",
  "description": "Record your screen and audio in Chrome.",
  "permissions": [
    "activeTab", 
    "desktopCapture", 
    "storage", 
    "downloads",
    "downloads.open",
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon-2.png",
      "48": "images/icon-2.png",
      "128": "images/icon-2.png"
    }
  },
  "icons": {
    "16": "images/icon-2.png",
    "48": "images/icon-2.png",
    "128": "images/icon-2.png"
  }
}
